<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activitys.CustomViewActivity">

    <com.modesty.quickdevelop.views.CircleView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="世界第三鲁大师"/>
    <com.modesty.quickdevelop.views.MaterialEditText
        android:id="@+id/me"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:paddingLeft="0dp"
        android:hint="请输入邮箱验证码"
        android:maxLines="1"
        android:maxLength="13"
        android:textColorHint="#ccc"
        android:textColor="#333"
        android:textSize="16dp"
        app:met_underlineColor="#333"
        app:met_clearButton="true"
        app:met_iconClearButton="@drawable/delete"
        app:met_underline_height="0.5dp"
        app:met_clearButton_padding="4dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:hint="请输入邮箱验证码"/>

    <ViewFlipper
        android:id="@+id/fl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inAnimation="@anim/anim_in"
        android:outAnimation="@anim/anim_out"/>

</LinearLayout>